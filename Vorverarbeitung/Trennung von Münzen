import os
import cv2
import numpy as np
from scipy.spatial import ConvexHull
from skimage.measure import label, regionprops
from skimage.feature import canny
from skimage.morphology import closing, square

ordner = input("Enter path: ")


for subfolder in ['vollem端nze', 'kaputtem端nze']:
    if not os.path.exists(os.path.join(ordner, subfolder)):
        os.makedirs(os.path.join(ordner, subfolder))


for datei in os.listdir(ordner):
    if datei.endswith('.tif'):
        bild = cv2.imread(os.path.join(ordner, datei), cv2.IMREAD_GRAYSCALE)

        kanten = canny(bild)

      
        label_image = label(closing(kanten, square(3)))
        props = regionprops(label_image)

        for prop in props:
            y, x = prop.coords.T
            hull = ConvexHull(prop.coords)
            perimeter = hull.area
            area = prop.area
            metric = 4 * np.pi * area / perimeter**2

            if metric > 0.8:
                os.rename(os.path.join(ordner, datei), os.path.join(ordner, 'vollem端nze', datei))
            else:
                os.rename(os.path.join(ordner, datei), os.path.join(ordner, 'kaputtem端nze', datei))
